{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "experimentalDecorators": true,
    "outDir": "out",
    "jsx": "react",
    "lib": ["ES2019", "DOM"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "test", "webpack.config.js"],
  "exclude": ["node_modules", ".vscode-test"]
}
